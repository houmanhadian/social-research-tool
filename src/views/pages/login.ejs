<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <!--<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0" />-->
  <title> login </title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/app.css">
  <%- include ../layouts/layouts-javascripts-head.ejs %>
</head>
<body style="background: aliceblue;">
<!--<button class="instabtn" onclick="openNav('sidepanel-login')">&#9776; Instagram </button>-->
<!--<button class="twitrbtn" onclick="openNav()">&#9776; tw</button>-->
<div id="app" class="flex flex-column">
  <main style="background-color: #d1f2fa75; border-radius: 100px;" class="login container">
    <div class="row">
      <div class="col-12 col-6-tablet push-3-tablet text-center heading">
        <%include ./logo-mini.ejs%>
        <h1 style="font-family: fantasy;color: #1995ad;font-size: 35px;text-shadow: 2px 2px 4px #84a8af;" class="font-100">social-research-tool</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-6-tablet push-3-tablet col-4-desktop push-4-desktop">
        <form class="form" id="login-form" method="post" action="/authenticate">
          <input type="hidden" name="strategy" value="local">
          <fieldset>
            <input style="cursor:pointer;" class="block" type="email" id="email" name="email" placeholder="email" autocomplete="email">
            <input class="block form-control" type="password" id="password" name="password" placeholder="password">
          </fieldset>
          <button style="cursor:pointer;" type="submit" id="login" class="button button-primary block signup">
            Login to social research tool
          </button>
          <a href="/registration" style="cursor:pointer;" id="registration" class="button button-primary block signup">
           Signup
          </a>
          <div id="login-error"style="text-align:center; color:darkred; font-size: 1em;"></div>
        </form>
      </div>
    </div>
    <p style="text-align: center" class="small text-muted">Built with &#9829; for <a target="_blank" href="https://houmanhadian.github.io/">Houman Hadian's doctoral project @ UAlg</a></p>
  </main>
</div>
<div class="sidepanel" id="sidepanel-login">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav('sidepanel-login')">&times;</a>

</div>
<script src="/js/globals.js"></script>
<script src="/js/client.js"></script>
</body>
</html>
